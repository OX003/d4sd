{
  "compilerOptions": {
    "outDir": "esm",
    "declaration": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["es6", "dom"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "exclude": ["./node_modules", "./esm", "./cjs"],
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"]
}
